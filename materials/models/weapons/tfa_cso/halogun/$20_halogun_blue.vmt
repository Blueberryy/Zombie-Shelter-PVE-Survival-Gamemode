"UnlitGeneric"
{
	$basetexture	"models\weapons\tfa_cso\halogun\$20_halogun_blue"
	$additive		1
    $nocull		1
    "$angle" 0.0
    "$translate" "[1.0 0.0]"
    "$center" "[0 0]"
	"$rate" "1"

    "Proxies"
    {
        "TextureScroll"
        {
            "textureScrollVar" "$basetexturetransform" // we don't need this, but it's not optional
            "textureScrollRate" "$rate"
            "textureScrollAngle" "$angle"
        }
    } 
}